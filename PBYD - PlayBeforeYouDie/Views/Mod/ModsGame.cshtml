@model ModModel

<h1 align="center">Mods</h1>
<div class="col-md-4" style="width:700px; margin:0 auto;">
    <div class="card mb-3">
        <div class="card-body text-center">
            <h5 class="card-title mt-1">@Model.ModName for <strong>@Model.GamesTitle</strong></h5>
            
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.ModImageOne" class="d-block w-100" alt="...">
                    </div>
                    @if (@Model.ModImageTwo != null || Model.ModImageThree != null || Model.ModImageFour != null)
                    {
                        <div class="carousel-item">
                            <img src="@Model.ModImageTwo" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="@Model.ModImageThree" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="@Model.ModImageFour" class="d-block w-100" alt="...">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" style="color: aqua" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" style="color: aqua" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            
        </div>
    </div>
</div>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Download Mod Link</button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Youtube Video Comparison</button>
        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">ABOUT THIS MOD</button>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        @if (Model.DownloadModLink == null)
        {
            <h2>No mods available for @Model.GamesTitle</h2>
        }
        else
        {
            <a href="@Model.DownloadModLink" target="_blank">Download and Install @Model.ModName</a>
        }
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        @if (Model.YoutubeVideoModComparison == null)
        {
            <h2>No videos available for @Model.GamesTitle</h2>
        }
        else
        {
            <iframe width="1400" height="500" src="@Model.YoutubeVideoModComparison" frameborder="0" allowfullscreen></iframe>
        }
        
    </div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
        <h2>Description</h2>
        <p>@Model.Description</p>
    </div>

</div>

