@model IEnumerable<GameServiceModel>

@{
    ViewBag.Title = "All Games";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var game in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@game.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@game.GameTitle</h5>
                <p class="mb-0">Summary: @game.Summary</p>
                <p class="mb-0">Rating: @game.Rating</p>
                
            </div>

            <form class="input-group-sm" asp-controller="Mod" asp-action="AllMods" asp-route-bookId="@game.Id">
                <input type="submit" value="Mods" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            
            <form class="input-group-sm" asp-controller="HowLongToBeat" asp-action="AllHowLongToBeat" asp-route-bookId="@game.Id">
                <input type="submit" value="HowLongToBeat" class="fs-6 btn btn-success mb-3 p-2" />
                </form>
        </div>
    }
</div>