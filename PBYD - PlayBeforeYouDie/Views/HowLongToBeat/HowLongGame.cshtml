@model HowLongToBeatModel
<h1 align="center">How Long To Beat</h1>
<div class="col-md-4" style="width:550px; margin:0 auto;">
    <div class="card mb-3">
        <div class="card-body text-center">
            <img class="card-img-top "
                 src="@Model.ImageUrl" alt="Game Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@Model.GamesTitle</h5>
                
                <div class="text-center" style="color:white">
                    When focusing on the main objectives, <strong>@Model.GamesTitle</strong> is about <strong>@Model.MainStory</strong> in length. 
                    If you're a gamer that strives to see all aspects of the game, you are likely to spend around <strong>@Model.HundredPercentComplete</strong> to obtain 100% completion.
                </div>
                
            </div>
           
        </div>
    </div>
</div>

<table class="table table-dark table-strijh ulo0-p]ped">
    <thead>
    <tr>
        <th scope="col">How Long To Beat Chart</th>
        <th scope="col">Main Story</th>
        <th scope="col">Main + Sides</th>
        <th scope="col">Completionist</th>
        <th scope="col">Speedrun</th>
        <th scope="col">Speedrun 100%</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">1</th>
        <td>@Model.MainStory</td>
        <td>@Model.MainPlusSides</td>
        <td>@Model.HundredPercentComplete</td>
        <td>@Model.SpeedRunAny</td>
        <td>@Model.SpeedRunOneHundredPercent</td>
    </tr>
    </tbody>
</table>

<style>
    .chart-container {
        width: 50%;
        height: 50%;
        margin: auto;
    }
</style>

<body>
<div class="card chart-container">
    <canvas id="chart"></canvas>
</div>

</body>

<script
    src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js">
</script>
<script>
      const ctx = document.getElementById("chart").getContext('2d');
      const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ["MainStory", "MainPlusSides", "HundredPercentComplete", "SpeedRunAny",
          "SpeedRunOneHundredPercent"],
          datasets: [{
            label: 'Played overall',
            backgroundColor: 'rgba(161, 198, 247, 1)',
            borderColor: 'rgb(47, 128, 237)',
            data: [20, 25, 35, 40, 56],
          }]
        },
        options: {
          scales: {
            yAxes: [{
              ticks: {
                beginAtZero: true,
              }
            }]
          }
        },
      });
</script>


@if (User?.Identity?.IsAuthenticated ?? false)
{
    <div class="text-center">
        <a class="btn btn-primary btn-lg" asp-area="" asp-controller="HowLongToBeat" asp-action="Submit">Submit Your Time</a>
    </div>
}
else
{
    <div class="text-center">
        <a class="btn btn-primary btn-lg" asp-controller="User" asp-action="Login">Please login to submit your playtime!</a>
    </div>

}


